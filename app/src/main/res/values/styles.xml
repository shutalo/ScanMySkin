<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/title_black</item>
    </style>
    <style name="blue_button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="white_button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="myOutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="cornerRadius">8dp</item>
    </style>
    <style name="diseaseTitle" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/title_black</item>
    </style>
    <style name="diseaseDescription" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>
    <style name="diseaseUrl" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>
</resources>
